<!-- Page Header -->
<!-- Set your background image for this header on the line below. -->
<header class="intro-header header-post">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <div class="post-heading">
                    <h1><%= data.get("title") %></h1>
                </div>
            </div>
        </div>
    </div>
</header>

<!-- Post Content -->
<article>
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <%= data.get("body") %>

                <hr>

                <p class="text-muted">
                    Опубликовано <%= data.get("created") %>
                </p>
            </div>
        </div>
    </div>
</article>