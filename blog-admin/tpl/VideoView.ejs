<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            <% if(item.id) { %>
            Video #<%= item.id %>
            <% } else { %>
            New video
            <% } %>
        </h1>
    </div>
</div>

<form>
    <div class="form-group">
        <label for="title">Title</label>
        <input type="text" class="form-control" id="title"
               placeholder="Title" value="<%= item.title %>">
    </div>

    <div class="form-group">
        <label for="teaser">Teaser</label>

        <div id="teaser"><%= item.teaser %></div>
    </div>

    <div class="form-group">
        <label for="list">List <small>(one perline)</small></label>

        <textarea class="form-control" id="list"><%= item.list %></textarea>
    </div>

    <button type="button" class="btn btn-default action save">
        Save
    </button>
</form>